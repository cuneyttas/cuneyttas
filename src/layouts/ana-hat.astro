---
import UstBilgi from '../komponentler/ust-bilgi.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="/fontawesome/css/all.min.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Cüneyt TAŞ Kişisel İnternet Sitesi</title>
	</head>
	<body>
		<UstBilgi />
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global lang="scss">

	@import '../stiller/_degiskenler.scss';
	@import '../stiller/_fontlar.scss';

	html,
	body {
		min-height: 100%;
		margin: 0;
		padding: 0;

		* {
			box-sizing: border-box;
		}
	}

	body {
		color: $koyu-gri;
		font-family: $ana-font;
		overflow-x: hidden;
		-webkit-font-smoothing: antialiased;
		text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.004);
	}

	figure {
		margin: 0;

		& > img {
			max-width: 100%;
			display: block;
		}
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		color: $koyu-gri;
	}

	h2 {
		font-size: 36px;
		line-height: 42px;
	}

	p,
	li {
		color: $koyu-gri;
		font-size: 18px;
		line-height: 24px;
	}

	ul {
		padding-left: 0;
	}

	a {
		transition: 0.3s;
		color: inherit;
		text-decoration: none;
	}

	hr {
		border: none;
		height: 2px;
		width: 100%;
		background-color: $beyaz;
	}

	.konteyner {
		max-width: $konteyner-genisligi;
		width: 95%;
		margin-left: auto;
		margin-right: auto;
	}

	.dugme {
		background-color: $turuncu;
		color: $beyaz;
		padding: 15px 30px;
		font-size: 16px;
		font-weight: 700;
		transition: 0.3s;
		display: inline-block;
		margin-top: 30px;

		&:hover {
			background-color: $sari;
		}
	}

	.manset {
		padding-top: 200px;
	}

	.yuvarlak-kose {
		border-radius: 5px;
	}

</style>
